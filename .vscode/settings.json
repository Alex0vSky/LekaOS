{
	"files.associations": {
		"*.orig": "cpp",
		".clang-format": "yaml"
	},
	"files.exclude": {
		".cache": true,
		".clangd": true
	},
	"cmake.buildDirectory": "${workspaceFolder}/_build_cmake_tools",
	"cmake.configureArgs": [
		"-DTARGET_BOARD=LEKA_V1_2_DEV",
		"-DCMAKE_CONFIG_DIR=${workspaceFolder}/_build_cmake_tools/cmake_config"
	],
	"markdownlint.config": {
		"MD002": false,
		"MD007": {
			"indent": 4
		},
		"MD024": {
			"siblings_only": true
		},
		"MD029": {
			"style": "one"
		},
		"MD033": false
	},
	"editor.formatOnSave": true,
	"cmake.configureOnOpen": true
}
